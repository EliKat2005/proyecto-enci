# ========================================
# ENCI - Sistema de Gestión Contable
# Archivo de Configuración de Entorno
# ========================================

# ========== SEGURIDAD ==========
SECRET_KEY=django-insecure-change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ========== BASE DE DATOS (MariaDB) ==========
# MariaDB/Mysql para desarrollo y producción
DB_ENGINE=django.db.backends.mysql
DB_NAME=enci
DB_USER=enci
DB_PASSWORD=strong-password
DB_HOST=127.0.0.1
DB_PORT=3306

# Tests (MariaDB)
DB_TEST_NAME=enci_test
# DB_TEST_USER=enci
# DB_TEST_PASSWORD=strong-password
# DB_TEST_HOST=127.0.0.1
# DB_TEST_PORT=3306

# ========== CORS ==========
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ========== EMAIL (Opcional) ==========
# Para desarrollo usa la consola (por defecto)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ========== REDIS (Opcional, para caché) ==========
# REDIS_URL=redis://localhost:6379/0

# ========== SEGURIDAD EN PRODUCCIÓN ==========
# Descomenta estas líneas cuando desplegues a producción:
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
