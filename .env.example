# ========================================
# ENCI - Sistema de Gestión Contable
# Archivo de Configuración de Entorno
# ========================================

# ========== SEGURIDAD ==========
# IMPORTANTE: Generar una clave segura en producción
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Hosts permitidos (separados por comas, sin espacios)
ALLOWED_HOSTS=localhost,127.0.0.1

# ========== BASE DE DATOS ==========
# MariaDB/MySQL
DB_ENGINE=django.db.backends.mysql
DB_NAME=enci
DB_USER=root
DB_PASSWORD=
DB_HOST=127.0.0.1
DB_PORT=3306

# ========== API REST ==========
# CORS - Orígenes permitidos (separados por comas)
# Ejemplo: http://localhost:3000,http://localhost:8080,https://frontend.example.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# ========== EMAIL (Opcional) ==========
