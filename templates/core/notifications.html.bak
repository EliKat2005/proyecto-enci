{% extends 'base.html' %}

{% block title %}Notificaciones | ECAE{% endblock %}

{% block content %}
<div class="min-h-[calc(100vh-8rem)] bg-gradient-to-br from-gray-50 via-indigo-50/20 to-purple-50/20 py-10">
  <div class="max-w-4xl mx-auto px-4">
    
    <!-- Header -->
    <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 mb-6">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6 6 0 10-12 0v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Notificaciones</h1>
            <p class="text-gray-500 text-sm">Mantente al día con las novedades</p>
          </div>
        </div>
        <form method="post" action="{% url 'mark_all_notifications_read' %}">
          {% csrf_token %}
          <button class="px-5 py-2.5 bg-indigo-100 hover:bg-indigo-200 text-indigo-700 rounded-xl font-semibold transition-colors flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Marcar todas como leídas</span>
          </button>
        </form>
      </div>
    </div>

    <!-- Lista de notificaciones -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
      <div class="divide-y divide-gray-100">
        {% for n in notifications %}
          <div class="p-5 transition-all duration-150 {% if n.unread %}bg-blue-50/50 border-l-4 border-blue-600{% else %}hover:bg-slate-50{% endif %}">
            <div class="flex justify-between items-start">
              <div class="flex-1 flex items-start space-x-3">
                <div class="flex-shrink-0">
                  {% if n.unread %}
                    <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/>
                      </svg>
                    </div>
                  {% else %}
                    <div class="w-10 h-10 bg-slate-200 rounded-lg flex items-center justify-center">
                      <svg class="w-5 h-5 text-slate-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  {% endif %}
                </div>
                <div class="flex-1">
                  <p class="text-sm text-slate-800 font-medium">
                    {{ n.verb|capfirst }} 
                    {% if n.target_user %}
                      <span class="text-blue-600 font-semibold">{{ n.target_user.username }}</span>
                    {% endif %}
                  </p>
                  <p class="text-xs text-slate-500 mt-1 flex items-center font-medium">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    {{ n.created_at|timesince }} atrás
                  </p>
                </div>
              </div>
              <div class="ml-4 flex-shrink-0">
                {% if n.unread %}
                  <form method="post" action="{% url 'mark_notification_read' %}">
                    {% csrf_token %}
                    <input type="hidden" name="notification_id" value="{{ n.id }}">
                    <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-xs font-semibold transition-colors flex items-center space-x-1.5">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <span>Marcar Leída</span>
                    </button>
                  </form>
                {% else %}
                  <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-slate-100 text-slate-600 border border-slate-300">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Leída
                  </span>
                {% endif %}
              </div>
            </div>
          </div>
        {% empty %}
          <div class="p-12 text-center">
            <div class="w-20 h-20 bg-slate-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
              </svg>
            </div>
            <h3 class="text-base font-bold text-slate-800 mb-2">No Hay Notificaciones</h3>
            <p class="text-sm text-slate-500">Cuando recibas notificaciones, aparecerán aquí.</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
